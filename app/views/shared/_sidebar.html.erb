 <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <%= form_tag posts_path, :method => 'get' do %>
                        <p>
                            <%= text_field_tag :search, params[:search], :class =>"form-control" %>
                            <span class="input-group-btn">
                                <%= submit_tag "Search", :name => nil, :class=>"btn btn-default" %>
                            </span>
                        </p>
                        <% end %>
                    </div>
                    <!-- /.input-group -->
                </div>


            </div>
    