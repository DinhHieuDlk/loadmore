
    <h1><%=@post.title%></h1>       
    <p class="lead">
        by <%=@post.user.user_name%>
    </p><hr>
    <p><span class="glyphicon glyphicon-time"></span> <%=@post.created_at%></p><hr>
    <%=image_tag @post.image_url(:thumb) if @post.image?%> <hr>
    <p class="lead"><%=@post.content%></p>
    <hr>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>

    <%= render "comments/form" %><hr>
    <%= render @post.comments %>

           